#!/usr/bin/env python

import logging
from argparse import ArgumentParser

from videowall.client import Client, ClientSubprocess
from videowall.players import get_player_platform_strings, player_platform_from_string

if __name__ == '__main__':
    parser = ArgumentParser()
    parser.add_argument('player_platform', choices=get_player_platform_strings())
    parser.add_argument('ip')
    parser.add_argument('--verbose', action='store_true')
    parser.add_argument('--broadcast_port', type=int, default=2000)

    args = parser.parse_args()

    if args.verbose:
        logging.getLogger().setLevel(logging.DEBUG)

    client = ClientSubprocess(args.ip, player_platform_from_string(args.player_platform), args.broadcast_port)
    try:
        client.run()
    except KeyboardInterrupt:
        client.close()
